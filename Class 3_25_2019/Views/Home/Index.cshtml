@using PeopleDatabase;
@model IEnumerable<Person>

	<div class="container">
		<div class="col-md-10">
			<table class="table-bordered table-hover table-striped table-responsive">

				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
				</tr>

				@foreach (Person p in Model)

				{
					<tr>

						<td>@p.FirstName</td>

						<td>@p.LastName</td>

						<td>@p.Age</td>
					</tr>
				}
			</table>
		</div>
	</div>